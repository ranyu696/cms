{
  "compilerOptions": {
    /*基本选项：*/
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",

    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /*严格性*/
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /*捆绑项目*/
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /*路径别名*/
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/app/api/collectionStatus"
  ],
  "exclude": ["node_modules"]
}
